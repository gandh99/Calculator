<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CalculatorScreen">
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CalculatorButton">
        <item name="android:layout_gravity">fill</item>
        <item name="android:elevation" tools:ignore="NewApi">0dp</item>
        <item name="android:textSize">40dp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
    </style>

    <style name="NumberButton" parent="CalculatorButton">
        <item name="android:background">#EEEEEE</item>

    </style>

    <style name="OperatorButton" parent="CalculatorButton">
        <item name="android:background">@android:color/holo_orange_dark</item>
    </style>

    <style name="FunctionButton" parent="CalculatorButton">
        <item name="android:background">@android:color/darker_gray</item>
    </style>

</resources>
